<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane 
    prefHeight="600.0" 
    prefWidth="800.0" 
    style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.8), rgba(255,255,255,0.8), rgba(255,255,255,0.8));" 
    xmlns="http://javafx.com/javafx/23.0.1" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="Controller.homecontroller">
    
    <!-- Soft Background Texture -->
    <StackPane 
        prefHeight="600.0" 
        prefWidth="800.0">
        
        <Rectangle 
            width="800" 
            height="600" 
            fill="white" 
            opacity="0.5">
            <effect>
                <DropShadow color="rgba(255,255,255,0.8)" radius="10" spread="0.1" />
            </effect>
        </Rectangle>
    </StackPane>
    
    <HBox 
        layoutX="0" 
        layoutY="0" 
        prefWidth="800" 
        prefHeight="70" 
        style="-fx-background-color: rgba(255,255,255,0.8);" 
        spacing="20" 
        alignment="CENTER_RIGHT">
        
        <padding>
            <Insets right="30"/>
        </padding>
        
        <Button 
            text="Login" 
            onMouseEntered="#handleMouseEnter" 
            onMouseExited="#handleMouseExited" 
            onAction="#btn_LoginClicked" 
            style="
                -fx-background-color:rgb(45, 133, 215); 
                -fx-text-fill: white; 
                -fx-background-radius: 25; 
                -fx-padding: 10 25; 
                -fx-font-size: 14px; 
                -fx-font-weight: bold;">
            <effect>
                <DropShadow color="#A9A9A9" radius="5" spread="0.2" />
            </effect>
        </Button>
        
        <Button 
            text="Sign Up" 
            onMouseEntered="#handleMouseEnter" 
            onMouseExited="#handleMouseExited" 
            onAction="#btn_AuthentificateClicked" 
            style="
                -fx-background-color:rgb(45, 133, 215); 
                -fx-text-fill: white; 
                -fx-background-radius: 25; 
                -fx-padding: 10 25; 
                -fx-font-size: 14px; 
                -fx-font-weight: bold;">
            <effect>
                <DropShadow color="#A9A9A9" radius="5" spread="0.2" />
            </effect>
        </Button>
    </HBox>
    
    <!-- Main Content -->
    <VBox 
        alignment="CENTER" 
        layoutX="0" 
        layoutY="70" 
        prefWidth="800" 
        prefHeight="530" 
        spacing="25">
        
        <StackPane>
            <ImageView 
                fitHeight="350" 
                fitWidth="600" 
                pickOnBounds="true" 
                preserveRatio="true">
                <image>
                    <Image url="@../image/home.png"/>
                </image>
                <effect>
                    <DropShadow color="#BDC3C7" radius="10" spread="0.2" />
                </effect>
            </ImageView>
        </StackPane>
        
        <Text 
            text="Scientific Publication App" 
            style="-fx-fill: #2C3E50;">
            <font>
                <Font name="System Bold" size="40"/>
            </font>
        </Text>
        
        <Text 
            text="Streamline Your Research Management" 
            wrappingWidth="600" 
            textAlignment="CENTER" 
            style="-fx-fill: #34495E;">
            <font>
                <Font size="18"/>
            </font>
        </Text>
    </VBox>
    
    <!-- Footer -->
    <Text 
        layoutX="250" 
        layoutY="590" 
        style="-fx-fill: #7F8C8D;" 
        text="Â© 2024 Research Management Solution made by Achraf">
        <font>
            <Font size="12"/>
        </font>
    </Text>
</AnchorPane>